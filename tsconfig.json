{
    "version": "1.8.0",
    "compilerOptions": {
        "outDir": "build/compiled",
        "lib": ["es6"],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@Common/*": ["SharedKernel/Common/*"]
        }
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}